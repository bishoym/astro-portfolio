---
import Banner from '@/components/Banner.astro';
import '@/styles/fonts.css';
import '@/styles/globals.css';

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const {
	title,
	description = 'A collection of the professional and personal works of Bishoy Maher',
	image = '/image/bishoy.jpg'
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth bg-primary">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon-32.png" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image} />
		<link rel="preconnect" href="https://rsms.me/" />
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
		<title>{title}</title>
	</head>
	<body class="flex min-h-screen flex-col bg-primary">
		<Banner
			><span
				class="relative mr-2 inline-block h-2 w-2 rounded-full bg-green-400 before:absolute before:-left-1/4 before:-top-1/4 before:h-3 before:w-3 before:animate-ping before:rounded-full before:bg-green-400 before:opacity-80"
			></span><p class="mr-2 text-xs text-primary-foreground">
				Currently taking on select projects
			</p>
			<button
				class="rounded-3xl bg-sky-700 px-3 py-1 text-xs text-primary-foreground hover:bg-sky-700/90 hover:shadow-lg focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50"
				>Get in touch â†’</button
			></Banner
		>
		<slot />
	</body>
</html>
