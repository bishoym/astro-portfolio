---
import { Image } from 'astro:assets';

interface Props {
	avatarSrc: ImageMetadata;
	name: string;
	role: string;
	content: string;
	cite: string;
}

const { avatarSrc, name, role, content, cite } = Astro.props;
---

<div
	class="flex flex-col gap-2 rounded-xl bg-zinc-100 p-8 pr-12 text-sm md:flex-row"
>
	<pre class="text-4xl text-zinc-400">‚ùù</pre>
	<blockquote cite={cite} class="flex flex-col gap-8">
		{content}

		<div class="flex gap-2">
			<Image src={avatarSrc} alt={`${name}, ${role}`} class="h-10 w-10" />
			<div class="flex flex-col gap-0">
				<span><b>{name}</b></span>
				<span class="text-zinc-600">{role}</span>
			</div>
		</div>
	</blockquote>
</div>
